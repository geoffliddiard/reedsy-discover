@font-face
    font-family 'reedsy'
    src url('../fonts/reedsy.ttf?jpe68e') format('truetype'),
        url('../fonts/reedsy.woff?jpe68e') format('woff'),
        url('../fonts/reedsy.svg?jpe68e#reedsy') format('svg')
    font-weight normal
    font-style normal

[class^="icon-"], [class*=" icon-"]
    font-family 'reedsy' !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon-search
    &:before
        content "\f002"

.icon-heart
    &:before
        content "\f004"

.icon-star
    &:before
        content "\f005"

.icon-star-o
    &:before
        content "\f006"

.icon-tag
    &:before
        content "\f02b"

.icon-tags
    &:before
        content "\f02c"

.icon-bookmark
    &:before
        content "\f02e"

.icon-heart-o
    &:before
        content "\f08a"

.icon-bookmark-o
    &:before
        content "\f097"

.icon-angle-down
    &:before
        content "\f107"

