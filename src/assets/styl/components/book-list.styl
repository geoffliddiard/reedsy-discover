// <book-list> component styles
.book-list
    center(800px)
    padding 40px 20px
    
    .controls
        margin 0 0 40px
        clearfix()
        
        .filters
            col(2/3)
            display flex
            align-items center 
        
        label
            font-size 14px
            margin 0 5px 0 0
        
        .select-wrapper
            position relative
            margin 0 10px 0 0
            
            select
                font-family 'Lato', serif
                font-size 14px
                -webkit-appearance none
                background $white
                line-height 40px
                padding 0 40px 0 10px
                border-radius 5px
                border 1px solid $light-grey
                color $dark-grey
                text-align center
                width 140px
                transition .5s ease-out
                
                &:focus
                    outline none
                    border-color $green
                    background lighten($green, 40)
                    
                    & + i
                        color $green
                    
            i
                position absolute
                right 16px
                top 13px
                pointer-events none
                
                
        .search-wrapper
            position relative
            col(1/3)
            
            input
                font-family 'Lato', serif
                font-size 14px
                -webkit-appearance none
                background $white
                line-height 40px
                padding 0 40px 0 10px
                border-radius 5px
                border 1px solid $light-grey
                color $dark-grey
                width 100%
                transition .5s ease-out
                
                &:focus
                    outline none
                    border-color $green    
                    background lighten($green, 40)
                    
                    & + i
                        color $green
            
            i
                font-size em(14px)
                position absolute
                right 16px
                top 14px
                pointer-events none
                transition .5s ease-out
                
            
    
    .inner
        clearfix()
        
        .item
            col(1/3, cycle: 3)
            
            &.ng-enter
                transition opacity .5s
                opacity 0
                
            &.ng-enter-active
                opacity 1
                
    .pagination
        display flex
        margin 0 0 40px
        
        span
            line-height 40px
            margin 0 10px 0 0
        button
            border 0
            padding 0 30px
            border-radius 5px
            background $green
            color $white
            height 40px
            margin 0 5px
            cursor pointer
            
            &:disabled
                opacity .5
            
            &:focus
                outline none