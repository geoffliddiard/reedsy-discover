// <book-view> component styles
.book-view
       
    .summary
        background $light-grey   
        padding 80px 0
        
        .inner
            center(640px)
            display flex
            
            .pic
                width 45%
            .cover
                position relative
                ratio-box(500/700)
                background-color $light-grey
                background-image url('../img/parrot-white.png')
                background-position center center
                background-repeat no-repeat
                background-size 50%
                width 100%
                
                img 
                    position absolute
                    top 0
                    left 0
            
            .details
                margin 0 0 0 30px
                
                > span
                    display block
                    
                .name
                    font-size em(32px)
                    margin 0 0 5px
                .author
                    font-size em(16px)
                .likes
                    i
                        color $red
                        2
                .description
                    margin 40px 0
                .categories
                    h4
                        font-size em(16px)
                        font-weight 400
                        margin 0 0 10px
                    a.tag
                        display inline-block
                        background $green
                        color $white
                        text-decoration none
                        line-height 1
                        padding 5px 15px
                        border-radius 50px
                        margin 0 5px 0 0
           
    .introduction    
        .inner
            center(640px)
            padding 80px 0
            
            h3
                font-size em(24px)
                font-weight 400
                color $grey
                margin 0 0 40px
            
            hr
                border 0
                height 1px
                width 20%
                background lighten($black, 70)
                border-radius 1px
                margin 60px auto
            footer
                display flex
                align-items center
                justify-content center
                
                .author
                    margin 0
                    
                    .avatar
                        width 120px
                        height 120px
                        border-radius 100%
                        border 4px solid $white
                        display block
                        margin 0 auto 20px
            