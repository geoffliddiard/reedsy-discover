html, body
    width 100%
    height 100%

body 
    font-family 'Lato', serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-font-feature-settings "kern" 1
    -moz-font-feature-settings "kern" 1
    background $beige
    color $black
    line-height 1.4

p
    margin 20px 0
    
img
    width 100%
    height auto
    
